<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_light_black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOrder"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/order_item_text_view_margin"
            android:textSize="@dimen/text_view_order_number_text_size"
            android:text="@string/order"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOrderNumber"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/order_item_text_view_margin"
            android:textSize="@dimen/text_view_order_number_text_size"
            android:text="11234"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOrderState"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/text_view_order_state_text_size"
            android:layout_weight="1"
            android:gravity="center"
            android:text="on preparation"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/order_item_text_size"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClientName"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/order_item_text_view_margin"
            android:text="@string/client"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClient"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/order_item_text_view_margin"
            android:textSize="@dimen/order_item_text_size"
            android:text="makro"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewItem"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/order_item_text_view_margin"
            android:textSize="@dimen/order_item_text_size"
            android:text="@string/items"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewItemQuantity"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/order_item_text_view_margin"
            android:textSize="@dimen/order_item_text_size"
            android:text="23"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPercent"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/text_view_percent_right_margin"
        android:text="50%"/>

    <ProgressBar
        android:id="@+id/progressBarItemOrder"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_item_progress_bar_height"
        android:visibility="visible"
        android:background="@color/indigo_light_black"
        android:progress="50"
        android:max="100"/>

</LinearLayout>